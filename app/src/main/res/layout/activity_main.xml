<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

  <TextView
      android:id="@+id/client_name"
      style="@style/StatusText"/>

  <TextView
      android:id="@+id/opponent_name"
      style="@style/StatusText"/>

  <TextView
      android:id="@+id/status"
      style="@style/StatusText"/>

  <TextView
      android:id="@+id/command"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="center"
      android:textSize="80sp"/>



  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="startAdvertising"
      android:text="Start advertising"
      style="@style/Widget.AppCompat.Button.Colored"/>

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="startDiscovery"
      android:text="Start discovery"
      style="@style/Widget.AppCompat.Button.Colored"/>

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="sendCommand"
      android:text="Start Command"
      style="@style/Widget.AppCompat.Button.Colored"/>

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="disconnect"
      android:text="@string/action_disconnect"
      style="@style/Widget.AppCompat.Button.Colored"/>
</LinearLayout>